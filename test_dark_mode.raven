// Dark Mode Demo - Phase 8 Sprint 2 Task 2.3
// To test dark mode, add class="dark" to the <html> tag in dist/index.html

@client
fn DarkModeDemo() -> JSX {
    <div class="min-h-screen bg-white dark:bg-gray-900 p-8">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">
                Dark Mode Demo
            </h1>

            <div class="grid grid-cols-2 gap-6">
                <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg">
                    <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-4">
                        Card 1
                    </h2>
                    <p class="text-gray-600 dark:text-gray-300">
                        This text changes color based on dark mode.
                    </p>
                    <button class="mt-4 px-4 py-2 bg-blue-500 dark:bg-blue-600 text-white rounded hover:bg-blue-600 dark:hover:bg-blue-700">
                        Click Me
                    </button>
                </div>

                <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg">
                    <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-4">
                        Card 2
                    </h2>
                    <p class="text-gray-600 dark:text-gray-300">
                        Dark mode works with all utilities!
                    </p>
                    <div class="mt-4 p-3 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded">
                        <p class="text-sm text-gray-700 dark:text-gray-200">
                            Nested elements adapt too
                        </p>
                    </div>
                </div>
            </div>

            <div class="mt-8 p-6 bg-gradient-to-r from-blue-500 to-purple-600 dark:from-blue-700 dark:to-purple-800 rounded-lg">
                <h3 class="text-3xl font-bold text-white mb-2">
                    Responsive Dark Mode
                </h3>
                <p class="text-blue-100 dark:text-blue-200">
                    Works with responsive variants too: md:dark:bg-gray-900
                </p>
            </div>

            <div class="mt-8 p-4 bg-yellow-100 dark:bg-yellow-900 border-l-4 border-yellow-500 dark:border-yellow-300">
                <p class="text-yellow-800 dark:text-yellow-100">
                    <strong>Tip:</strong> To enable dark mode, add class="dark" to the &lt;html&gt; tag
                </p>
            </div>
        </div>
    </div>
}

fn main() {
    let app = DarkModeDemo();
}
