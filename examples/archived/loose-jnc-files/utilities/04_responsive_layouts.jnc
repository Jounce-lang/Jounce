@client
fn ResponsiveText() -> JSX {
    <div class="bg-white p-6 md:p-8 lg:p-12 rounded-lg shadow-md">
        <h2 class="text-xl md:text-2xl lg:text-3xl xl:text-4xl font-bold text-gray-800 mb-4">
            Responsive Typography
        </h2>
        <p class="text-sm md:text-base lg:text-lg text-gray-600 mb-4">
            This text starts small on mobile and grows larger on bigger screens.
            The padding also increases to maintain proper spacing.
        </p>
        <div class="flex flex-col md:flex-row gap-4">
            <div class="flex-1 p-4 bg-blue-50 rounded">
                <h3 class="text-base md:text-lg font-semibold text-blue-800 mb-2">Column 1</h3>
                <p class="text-sm md:text-base text-blue-600">Stacked on mobile</p>
            </div>
            <div class="flex-1 p-4 bg-green-50 rounded">
                <h3 class="text-base md:text-lg font-semibold text-green-800 mb-2">Column 2</h3>
                <p class="text-sm md:text-base text-green-600">Side by side on tablet+</p>
            </div>
        </div>
    </div>
}

@client
fn HideOnMobile() -> JSX {
    <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-bold text-gray-800 mb-4">Responsive Visibility</h3>
        <div class="space-y-4">
            <div class="p-4 bg-blue-100 rounded">
                <p class="font-medium text-blue-800">Visible on all sizes</p>
            </div>
            <div class="hidden md:block p-4 bg-green-100 rounded">
                <p class="font-medium text-green-800">Hidden on mobile, visible on tablet+</p>
            </div>
            <div class="hidden lg:block p-4 bg-purple-100 rounded">
                <p class="font-medium text-purple-800">Hidden on tablet, visible on desktop+</p>
            </div>
            <div class="block md:hidden p-4 bg-red-100 rounded">
                <p class="font-medium text-red-800">Only visible on mobile</p>
            </div>
        </div>
    </div>
}

