@client
fn ResponsiveSidebar() -> JSX {
    <div class="flex flex-col md:flex-row gap-4">
        <aside class="w-full md:w-64 bg-gray-800 text-white p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">Sidebar</h3>
            <nav class="flex flex-col gap-2">
                <a href="#" class="py-2 px-4 bg-gray-700 rounded hover:bg-gray-600">Home</a>
                <a href="#" class="py-2 px-4 bg-gray-700 rounded hover:bg-gray-600">About</a>
                <a href="#" class="py-2 px-4 bg-gray-700 rounded hover:bg-gray-600">Contact</a>
            </nav>
        </aside>
        <main class="flex-1 bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Main Content</h2>
            <p class="text-gray-600 mb-4">
                On mobile, sidebar is full-width and stacked above content.
                On tablet and larger, sidebar is fixed-width on the left.
            </p>
            <p class="text-gray-600">
                This is a common responsive pattern for web applications.
            </p>
        </main>
    </div>
}

@client
fn ResponsiveNavbar() -> JSX {
    <nav class="bg-white shadow-md rounded-lg p-4">
        <div class="flex items-center justify-between">
            <div class="text-xl font-bold text-gray-800">Logo</div>

            {/* Desktop menu */}
            <div class="hidden md:flex gap-6">
                <a href="#" class="text-gray-600 hover:text-gray-900">Home</a>
                <a href="#" class="text-gray-600 hover:text-gray-900">Features</a>
