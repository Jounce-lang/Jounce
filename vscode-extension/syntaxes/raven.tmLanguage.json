{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RavensOne",
  "scopeName": "source.raven",
  "patterns": [
    { "include": "#comments" },
    { "include": "#annotations" },
    { "include": "#jsx" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.raven",
          "match": "//.*$"
        },
        {
          "name": "comment.block.raven",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.raven",
          "match": "@(server|client)\\b",
          "captures": {
            "0": { "name": "storage.type.annotation.raven" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.raven",
          "match": "\\b(if|else|match|for|while|loop|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.raven",
          "match": "\\b(fn|let|const|mut|struct|enum|impl|trait|type|pub|use|mod|as|in)\\b"
        },
        {
          "name": "keyword.control.async.raven",
          "match": "\\b(async|await)\\b"
        },
        {
          "name": "keyword.operator.raven",
          "match": "\\b(move|ref)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.raven",
          "match": "\\b(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|f32|f64|bool|char|str)\\b"
        },
        {
          "name": "storage.type.raven",
          "match": "\\b(String|Vec|Option|Result|HashMap|HashSet|Box|Rc|Arc|Cell|RefCell)\\b"
        },
        {
          "name": "storage.type.self.raven",
          "match": "\\b(Self|self)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.raven",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.raven",
          "match": "\\b(None|Some|Ok|Err|Signal)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.raven",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.raven",
              "match": "\\\\(n|r|t|\\\\|0|\"|')"
            },
            {
              "name": "constant.character.escape.unicode.raven",
              "match": "\\\\u\\{[0-9a-fA-F]+\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.raven",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.raven",
              "match": "\\\\(n|r|t|\\\\|0|\"|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.raven",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?(f32|f64)?\\b"
        },
        {
          "name": "constant.numeric.integer.raven",
          "match": "\\b\\d+(_\\d+)*(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128)?\\b"
        },
        {
          "name": "constant.numeric.hex.raven",
          "match": "\\b0x[0-9a-fA-F]+(_[0-9a-fA-F]+)*\\b"
        },
        {
          "name": "constant.numeric.binary.raven",
          "match": "\\b0b[01]+(_[01]+)*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.raven",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.raven",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.raven",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.raven",
          "match": "(=|\\+=|-=|\\*=|/=|%=)"
        },
        {
          "name": "keyword.operator.namespace.raven",
          "match": "::"
        },
        {
          "name": "keyword.operator.arrow.raven",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.range.raven",
          "match": "(\\.\\.|\\.\\.=)"
        },
        {
          "name": "keyword.operator.spread.raven",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.turbofish.raven",
          "match": "::<"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.raven",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.macro.raven",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)!"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.constant.raven",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.raven",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "jsx": {
      "patterns": [
        {
          "name": "meta.tag.jsx.raven",
          "begin": "(<)([A-Z][a-zA-Z0-9]*|[a-z][a-zA-Z0-9\\-]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.begin.jsx.raven" },
            "2": { "name": "entity.name.tag.jsx.raven" }
          },
          "end": "(/>)|(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.self-close.jsx.raven" },
            "2": { "name": "punctuation.definition.tag.end.jsx.raven" }
          },
          "patterns": [
            { "include": "#jsx-attributes" },
            { "include": "#jsx-expression" }
          ]
        },
        {
          "name": "meta.tag.jsx.close.raven",
          "begin": "(</)([A-Z][a-zA-Z0-9]*|[a-z][a-zA-Z0-9\\-]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.begin.jsx.raven" },
            "2": { "name": "entity.name.tag.jsx.raven" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.end.jsx.raven" }
          }
        },
        { "include": "#jsx-expression" }
      ]
    },
    "jsx-attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.jsx.raven",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_\\-]*(?==)"
        },
        {
          "name": "entity.other.attribute-name.jsx.raven",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_\\-]*\\b"
        }
      ]
    },
    "jsx-expression": {
      "patterns": [
        {
          "name": "meta.embedded.expression.jsx.raven",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.jsx.raven" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.jsx.raven" }
          },
          "patterns": [
            { "include": "$self" }
          ]
        }
      ]
    }
  }
}
