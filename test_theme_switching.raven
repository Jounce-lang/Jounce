@client
fn ThemeDemo() -> JSX {
    <div class="p-8 bg-gray-100">
        <h1 class="text-4xl font-bold text-blue-600 mb-4">Theme Switching Demo</h1>

        <div class="grid grid-cols-2 gap-4">
            <div class="p-6 bg-white rounded-lg shadow">
                <h2 class="text-2xl font-semibold mb-2">Light Theme</h2>
                <p class="text-gray-700">Using default CSS values</p>
            </div>

            <div class="p-6 bg-gray-900 rounded-lg shadow">
                <h2 class="text-2xl font-semibold text-white mb-2">Dark Theme</h2>
                <p class="text-gray-300">Would use CSS variables for dynamic theming</p>
            </div>
        </div>

        <div class="mt-8">
            <button class="px-6 py-3 bg-blue-500 text-white rounded hover:bg-blue-600">
                Toggle Theme (when JS implemented)
            </button>
        </div>
    </div>
}

fn main() {
    let app = ThemeDemo();
}
